<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PharaSnap.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_background_blue</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Theme.PharaSnap.MainMenuButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_background_blue_transparent</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/darkPurple</item>
    </style>
    <style name="Theme.PharaSnap.WalkthroughButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_background_blue</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Theme.PharaSnap.AlertDialogButton" parent="@android:style/Widget.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.PharaSnap.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/Theme.PharaSnap.AlertDialogButton</item>
    </style>
    <style name="Theme.PharaSnap" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/purple_500</item>-->
<!--        <item name="font">@font/primary</item>-->
        <item name="fontFamily">@font/primary</item>
        <item name="buttonStyle">@style/Theme.PharaSnap.Button</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/primaryYellow</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/logo</item>
        <item name="android:fontFamily">@font/primary</item>
        <item name="alertDialogTheme">@style/Theme.PharaSnap.AlertDialog</item>
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
<!--        <item name="colorOnPrimary">@color/white</item>-->
<!--        &lt;!&ndash; Secondary brand color. &ndash;&gt;-->
