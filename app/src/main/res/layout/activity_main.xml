<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingTop="45dp"
    tools:context=".activities.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:gravity="start"
        android:layout_margin="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/app_name"
            android:layout_gravity="center"
            android:textColor="@color/darkPurple"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/launch_widget"
            android:layout_width="wrap_content"
            style="@style/Theme.PharaSnap.TransparentButton"
            android:layout_height="wrap_content"
            android:text="Start widget"
            android:textSize="18sp"
            android:textColor="@color/darkPurple"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/darkPurple"
            android:layout_marginVertical="10dp"
            />
        <Button
            android:id="@+id/restart_tutorial"
            android:layout_width="wrap_content"
            style="@style/Theme.PharaSnap.TransparentButton"
            android:layout_height="wrap_content"
            android:text="Restart Tutorial"
            android:textSize="18sp"
            android:textColor="@color/darkPurple"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/version_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/darkPurple"
            android:layout_gravity="center_horizontal|bottom"
            android:text="Version x.x (code)\nDeveloped by Alchemedy"
            android:layout_margin="12dp" />
</FrameLayout>