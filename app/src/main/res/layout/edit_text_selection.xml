<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="12dp"
        android:textColor="@color/darkPurple"
        android:text="Text cursor move and select text word by word"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="12dp">
        <ScrollView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_container"
                >
                <com.alchemedy.pharasnap.widgets.SelectionEditorTextView
                    android:id="@+id/selectedText"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="5dp"
                    android:paddingStart="@dimen/thumb_size"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="@dimen/thumb_size"
                    android:layout_height="wrap_content"
                    />
            </FrameLayout>
        </ScrollView>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/action_copy_entire_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Select all text" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/action_copy_selected_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/copy_white"
            android:layout_marginHorizontal="12dp"
            android:text="Copy Selected text " />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/action_change_text_content"
            android:layout_gravity="end|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/edit"
            android:text="Edit text "
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/action_search_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/search"
            android:text="Quick Google selected text " />
    </LinearLayout>
</LinearLayout>