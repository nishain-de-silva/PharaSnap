<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent">
    <LinearLayout
        android:id="@+id/modal_container"
        android:clickable="true"
        android:focusable="false"
        android:orientation="vertical"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/text_selection_window"
        android:paddingTop="18dp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:minHeight="@dimen/modal_min_height"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="18dp"
            android:gravity="center_vertical">
            <ImageButton
                android:id="@+id/modal_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/back"
                android:contentDescription="back"
                android:background="@drawable/primary_color_round_rect"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/modal_back_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:text="@string/text_selection_modal_title"
                android:textSize="20sp"
                android:layout_marginStart="12dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/modal_content"
            android:padding="18dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/modal_content_container"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>
</FrameLayout>
