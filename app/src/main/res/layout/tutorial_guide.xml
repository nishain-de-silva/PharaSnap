<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/primary_color_round_rect"
        android:padding="12dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:text="Tutorial"
                android:textColor="@android:color/white"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/guide_skip_tutorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/guide_button"
                android:textColor="@android:color/white"
                android:text="skip tutorial"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/guide_text_content"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:textColor="@android:color/white"
            android:text="content"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/guide_next"
            android:layout_width="wrap_content"
            android:background="@drawable/guide_button"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Next"
            android:layout_gravity="end"
            />
    </LinearLayout>
</FrameLayout>
