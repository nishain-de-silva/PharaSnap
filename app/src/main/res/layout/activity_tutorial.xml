<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:paddingTop="45dp"
    android:paddingHorizontal="25dp"
    android:paddingBottom="12dp"
    android:orientation="vertical"
    tools:context=".activities.TutorialActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutorial Scenario - The Expedition"
        android:textSize="20sp"
        />
    <ScrollView
        android:id="@+id/tutorial_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="12dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mountains of Seiveria known for housing many secrets of history of the early earth, join on research expedition with 5 geologist to collect and study fossils and minerals mainly found eye of the mountain." />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expedition starts on July 12 here are some intructions you may need to comply."/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dark_rounded_rect"
                android:text="The expedition group have total 15 members including 2 medical team members"
                android:layout_marginVertical="15dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:paddingHorizontal="15dp"
                android:paddingVertical="7dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The starting date fo the expedition will confirmed by circle of organizers until then here are some intructions you may need to comply." />
            <ImageView
                android:id="@+id/tutorial_poster"
                android:src="@drawable/poster"
                android:layout_width="match_parent"
                android:contentDescription="image about group of scientists working on mineral collection"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginVertical="12dp"
                />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tutorial_hidden_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_hidden_text_content" />
</LinearLayout>