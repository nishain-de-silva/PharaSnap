<?xml version="1.0" encoding="utf-8"?>
<com.alchemedy.pharasnap.widgets.CustomOverlayView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end|center_vertical"
    android:theme="@style/Theme.PharaSnap"
    android:background="@android:color/transparent">
<!--    <ImageView-->
<!--        android:id="@+id/debug_image"-->
<!--        android:layout_width="250dp"-->
<!--        android:layout_height="wrap_content" />-->

    <FrameLayout
        android:id="@+id/buttonContainer"
        android:layout_gravity="end|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/list"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/yellow_color_circle"
            android:src="@drawable/recent" />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end">
            <ImageButton
                android:id="@+id/textCaptureMode"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@drawable/yellow_color_circle"
                android:src="@drawable/settings" />
            <View
                android:id="@+id/active_setting_indicator"
                android:visibility="gone"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/red_circle"
                />
        </FrameLayout>
        <ImageButton
            android:id="@+id/eraser"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/yellow_color_circle"
            android:src="@drawable/eraser" />
        <ImageButton
            android:id="@+id/toggleMode"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/yellow_color_circle"
            android:src="@drawable/character" />
        <ImageButton
            android:id="@+id/stop"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/yellow_color_circle"
            android:src="@drawable/stop" />
        <com.alchemedy.pharasnap.widgets.EnableButton
            android:id="@+id/toggleCollapse"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/yellow_color_circle"
            android:src="@drawable/collapse" />
    </FrameLayout>
    <ProgressBar
        android:id="@+id/loading"
        android:visibility="gone"
        android:layout_marginEnd="12dp"
        android:indeterminateTint="@color/darkPurple"
        android:background="@drawable/yellow_color_circle"
        android:padding="5dp"
        android:layout_gravity="end|center_vertical"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size" />
    <FrameLayout
        android:id="@+id/text_hint_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="12dp">

        <com.alchemedy.pharasnap.widgets.BottomBar
            android:id="@+id/text_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/text_hint"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="@string/text_hint_default"
            android:textColor="@android:color/black"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:shadowRadius="2"
            android:background="@drawable/primary_color_round_rect"
            android:textSize="15sp"
            android:paddingHorizontal="12dp"
            android:text="Swipe anywhere to collapse" />
        <ImageView
            android:id="@+id/text_copy_indicator"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:padding="4dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/copy"
            android:layout_gravity="start"
            android:background="@drawable/primary_blue_circle"
            />
        <ImageButton
            android:layout_marginEnd="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/move"
            android:layout_gravity="end"
            android:background="@drawable/black_color_circle"
            />
    </FrameLayout>
</com.alchemedy.pharasnap.widgets.CustomOverlayView>