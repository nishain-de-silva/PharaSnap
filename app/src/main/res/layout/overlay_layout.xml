<?xml version="1.0" encoding="utf-8"?>
<com.ndds.lettersnap.widgets.CustomOverlayView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end|center_vertical"
    android:theme="@style/Theme.LetterSnap"
    android:background="@android:color/transparent">
    <ImageView
        android:visibility="gone"
        android:id="@+id/debug_image"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:id="@+id/buttonContainer"
        android:layout_marginEnd="@dimen/button_space"
        android:layout_gravity="end|center_vertical"
        android:layout_width="95dp"
        android:layout_height="@dimen/button_container_size"
        >
        <ImageButton
            android:id="@+id/list"
            android:background="@drawable/primary_color_circle"
            android:src="@drawable/recent"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            />
        <ImageButton
            android:id="@+id/toggle"
            android:background="@drawable/primary_color_circle"
            android:layout_gravity="center_vertical"
            android:src="@drawable/character"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            />

        <ImageButton
            android:id="@+id/stop"
            android:background="@drawable/white_circle"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/stop"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            />

        <com.ndds.lettersnap.widgets.EnableButton
            android:id="@+id/toggleCollapse"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/primary_color_circle"
            android:src="@drawable/collapse"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"

            />
    </FrameLayout>
    <ProgressBar
        android:id="@+id/loading"
        android:visibility="gone"
        android:layout_marginEnd="12dp"
        android:background="@drawable/white_circle"
        android:padding="5dp"
        android:layout_gravity="end|center_vertical"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size" />
    <FrameLayout
        android:id="@+id/text_hint_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="12dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:shadowColor="@android:color/black"
            android:shadowRadius="0.7"
            android:shadowDx="0"
            android:shadowDy="0"
            android:text="Swipe anywhere to collapse"
            />
        <com.ndds.lettersnap.widgets.TextHint
            android:id="@+id/text_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/text_hint"
            android:paddingHorizontal="20dp"
            android:maxLines="2"
            android:paddingVertical="10dp"
            android:text="@string/text_hint_default"
            android:textColor="@android:color/black"
            />
        <ImageButton
            android:id="@+id/text_hint_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/close"
            android:layout_gravity="end"
            android:background="@drawable/black_color_circle"
            />
    </FrameLayout>


    <include
        android:id="@+id/modal_window"
        layout="@layout/modal"
        android:visibility="gone"
        />
</com.ndds.lettersnap.widgets.CustomOverlayView>