<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:theme="@style/Theme.PharaSnap"
    android:background="@drawable/text_container_red"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="7dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/item_delete1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/delete" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/item_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="Undo Remove"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:background="@drawable/white_button"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/primaryRed" />
        <ImageView
            android:id="@+id/item_delete2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/delete" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/item_slider"
        android:layout_width="match_parent"
        android:padding="7dp"
        android:background="@drawable/text_container"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/row_item_content"
            android:layout_weight="1"
            android:maxLines="3"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:text="sample text"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/row_action_copy_shortcut"
            android:layout_marginStart="12dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/primary_color_round_rect"
            android:src="@drawable/copy"
            />
    </LinearLayout>


</FrameLayout>