<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/text_hint"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="@string/text_hint_default"
        android:textColor="@android:color/black"
        />
    <ImageView
        android:padding="4dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/copy"
        android:layout_marginTop="5dp"
        android:layout_gravity="start"
        android:background="@drawable/green_circle"
        />
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/hide"
        android:layout_gravity="end"
        android:background="@drawable/black_color_circle"
        />
    </FrameLayout>
    <LinearLayout
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To clear all Text Selections:"
            android:textColor="@android:color/black"
            android:layout_marginEnd="12dp"/>
        <ImageButton
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:background="@drawable/yellow_color_circle"
            android:src="@drawable/eraser" />
    </LinearLayout>
</LinearLayout>